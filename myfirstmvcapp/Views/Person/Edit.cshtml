@model myfirstmvcapp.Models.Person

@{
    ViewData["Title"] = "Edit Person";
}

<h2>@ViewData["Title"]</h2>
<!-- asp-action looks for a post action call Edit. -->
<form asp-action="Edit">
    <div class="form-horizontal">
        <!-- Hidden ID Because if we don't when we post to edit the ID won't be there. -->
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Department" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Years" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Years" class="form-control" />
                <span asp-validation-for="Years" class="text-danger"></span>
            </div>
        </div>
        <!-- Submit does wheatever the  -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>