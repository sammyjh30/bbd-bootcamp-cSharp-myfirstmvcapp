@model myfirstmvcapp.Models.AddPersonModel

@{
    ViewData["Title"] = "Edit Person";
}

<h2>@ViewData["Title"]</h2>
<!-- asp-action looks for a post action call Edit. -->
<form asp-action="Edit">
    <div class="form-horizontal">
        <!-- Hidden ID Because if we don't when we post to edit the ID won't be there. -->
        <input type="hidden" asp-for="PersonInfo.Id" />
        <div class="form-group">
            <label asp-for="PersonInfo.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PersonInfo.Name" class="form-control" />
                <span asp-validation-for="PersonInfo.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PersonInfo.Department" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select name="PersonInfo.Department" asp-validation-for="PersonInfo.Department" class="form-control">
                    <option value=PersonInfo.Department>@Model.PersonInfo.Department</option>
                    @foreach (var dept in Model.DepartmentList)
                    {
                        @if (@dept.Name != @Model.PersonInfo.Department)
                        {
                            <option value=@dept.Name>@dept.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PersonInfo.Years" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PersonInfo.Years" class="form-control" />
                <span asp-validation-for="PersonInfo.Years" class="text-danger"></span>
            </div>
        </div>
        <!-- Submit does wheatever the  -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>