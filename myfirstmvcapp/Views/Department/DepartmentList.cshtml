@model IEnumerable<myfirstmvcapp.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="panel-body">
        <table class="table table-hover table-bordered table-condensed" id="example1">
            <thead>
                <tr>
                    <td><b>Name</b></td>
                    <td><b></b></td>
                </tr>
            </thead>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td><button><a asp-action="Details" asp-route-id="@department.Id">Details</a></button><button>
                        <a asp-action="Delete" asp-route-id="@department.Id">Delete</a></button></td>
                </tr>
            }
        </table>
        <a asp-action="AddDepartment">Add</a>

</div>
